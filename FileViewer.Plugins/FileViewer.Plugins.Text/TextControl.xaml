<UserControl x:Class="FileViewer.Plugins.Text.TextControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:local="clr-namespace:FileViewer.Plugins.Text" mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <avalonEdit:TextEditor x:Name="TextEditor" ShowLineNumbers="True" 
                               WordWrap="True" FontSize="10pt" FontFamily="Consolas" 
                               IsReadOnly="True" Foreground="{DynamicResource SystemControlBackgroundBaseHighBrush}"
                               HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        </avalonEdit:TextEditor>
    </Grid>
</UserControl>
