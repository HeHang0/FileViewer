<fc:FileControl x:Class="FileViewer.FileControl.Office.OfficeControl"
             xmlns:fc="clr-namespace:FileViewer.FileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileViewer.FileControl.Office"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DocumentViewer Visibility="{Binding ShowBrowser, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}" Document="{Binding OfficeContent}">
            <DocumentViewer.Template>
                <ControlTemplate>
                    <ScrollViewer x:Name="PART_ContentHost" CanContentScroll="True">
                        <ContentControl Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Document}"/>
                    </ScrollViewer>
                </ControlTemplate>
            </DocumentViewer.Template>
        </DocumentViewer>
    </Grid>
</fc:FileControl>
